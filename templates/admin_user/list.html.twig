{% extends 'base.html.twig' %}

{% block title %}Benutzer Liste{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>Benutzer Liste</h1>

            <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">Company</th>
                    <th scope="col">Aktionen</th>
                </tr>
            </thead>
            
            {% for user in users%}
                <tr>
                <th scope="row">{{user.id}}</th>
                <td>{{user.email}}</td>
                <td>{{user.company.name}}</td>
                <td><a href="{{ path('product_add', {'companyId': user.company.id}) }}">Produkt anlegen</a></td>
                </tr>
            {% endfor %}
            </table>
        </div>       
    </div>
{% endblock %}
